{
  "compilerOptions": {
    "target": "ES2020",            // Modern JS features
    "module": "ESNext",            // Use native ESM
    "moduleResolution": "node",    // Resolve modules like Node
    "strict": true,
    "esModuleInterop": true,       // Allow `import fs from 'fs'` style
    "types": ["node"],
    "skipLibCheck": true
  }
}
